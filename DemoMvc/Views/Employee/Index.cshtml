@model IEnumerable< EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>
<br />
<br />
<a class="btn btn-primary" asp-action="Create">Create Department</a>
<br />
<br />
<div class="row justify-content-center align-items-center mt-3 ">
    <form asp-action="Index" class="row col-8">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input class="btn btn-outline-success" type="submit" value="Search" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)

{
    <div class="container-fluid">
        <table class="table table-striped table-hover">

            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(D=>D.Name)</td>
                    <td>@Html.DisplayNameFor(D=>D.Image)</td>
                    <td>@Html.DisplayNameFor(D=>D.Address)</td>
                    <td>@Html.DisplayNameFor(D=>D.Email)</td>
                    <td>@Html.DisplayNameFor(D=>D.Salary)</td>
                    <td>@Html.DisplayNameFor(D=>D.IActive)</td>

                    <td>@Html.DisplayNameFor(D=>D.Age)</td>
                    <td>@Html.DisplayNameFor(D=>D.Department)</td>

                    <td>@Html.DisplayNameFor(D=>D.PhoneNumber)</td>

                    <td>@Html.DisplayNameFor(D=>D.HerDate)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delet</td>
                </tr>


            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <img src="~/File/image/@item.ImageName" class="img-fluid rounded-circle" />
                        </td>
                        <td>@Html.DisplayFor(E=>item.Address)</td>
                        <td>@Html.DisplayFor(E=>item.Email)</td>
                        <td>@Html.DisplayFor(E=>item.Salary)</td>
                        <td>@Html.DisplayFor(E=>item.IActive)</td>

                        <td>@item.Age</td>
                        <td>@Html.DisplayFor(E=>item.Department.Name)</td>

                        <td>@item.PhoneNumber</td>
                        <td>@item.HerDate</td>
                        <partial name="_ButtonsPartialView" model="@item.Id">
                    </tr>

                }
            </tbody>

        </table>
    </div>
}
else
{
    <div class="mt-4 alert alert-warning"><h1>No Employee ......</h1></div>
}


