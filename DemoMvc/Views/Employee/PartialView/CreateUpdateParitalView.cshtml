
@model EmployeeViewModel
@inject IUnitOfWork unite
@{
    var department = new SelectList( await unite.departmentRepostory.GetAll(),"Id","Name");
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name">Name</label>
    <input class="form-control" asp-for="Name" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address">Address</label>
    <input class="form-control" asp-for="Address" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email">Email</label>
    <input class="form-control" asp-for="Email" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="IActive">IActive</label>
    <input class="form-control" asp-for="IActive" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input class="form-control" asp-for="Salary" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age">Age</label>
    <input class="form-control" asp-for="Age" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber">PhoneNumber</label>
    <input class="form-control" asp-for="PhoneNumber" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HerDate">HerDate</label>
    <input class="form-control" asp-for="HerDate" />

</div>
<div class="form-group">
    <label class="col-form-label">Department</label>
    <select class="form-control" asp-for=DepartmentId asp-items="@department">
        <option value="@null">---Select Department----</option>
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Image">Image</label>
    <input class="form-control" asp-for="Image" />
</div>