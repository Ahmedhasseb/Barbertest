
@model IEnumerable<Department>;
@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />
<a class="btn btn-primary" asp-action="Create">Create Department</a>
<br />
<br />
@if (Model.Count() > 0)

{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
                <td>@Html.DisplayNameFor(D=>D.DateOnlyTime)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>


        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOnlyTime.Day</td>
                    <partial name="_ButtonsPartialView" model="@item.Id">
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning"><h1>No Department ......</h1></div>
}

